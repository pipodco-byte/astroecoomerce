<section class="stats-section">
  <div class="stats-container">
    <div class="stats-grid">
      
      <div class="stat-item">
        <div class="number-wrapper">
          <h2 class="stat-number" data-target="15">0</h2>
          <span class="stat-suffix">años</span>
        </div>
        <p class="stat-text">De experiencia</p>
      </div>

      <div class="stat-item">
        <div class="number-wrapper">
          <h2 class="stat-number" data-target="10000">0</h2>
          <span class="stat-suffix">+</span>
        </div>
        <p class="stat-text">Equipos retomados</p>
      </div>

      <div class="stat-item">
        <div class="number-wrapper">
          <h2 class="stat-number" data-target="98">0</h2>
          <span class="stat-suffix">%</span>
        </div>
        <p class="stat-text">Satisfacción</p>
      </div>

      <div class="stat-item">
        <div class="number-wrapper">
          <h2 class="stat-number" data-target="30">0</h2>
          <span class="stat-suffix">min</span>
        </div>
        <p class="stat-text">Valoración</p>
      </div>

    </div>
  </div>
</section>

<script>
  const statsObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const target = entry.target;
        const targetValue = parseInt(target.getAttribute('data-target'));
        let current = 0;
        const increment = targetValue / 100;
        const updateCount = () => {
          if (current < targetValue) {
            current += increment;
            target.innerText = Math.ceil(current);
            setTimeout(updateCount, 15);
          } else {
            target.innerText = targetValue;
          }
        };
        updateCount();
        statsObserver.unobserve(target);
      }
    });
  }, { threshold: 0.5 });
  document.querySelectorAll('.stat-number').forEach(stat => statsObserver.observe(stat));
</script>

