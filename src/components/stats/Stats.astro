---
/* Componente de Estadísticas Pipod - Versión de Alto Contraste */
---

<section class="stats-section">
  <div class="container">
    <div class="stats-grid">
      
      <div class="stat-item">
        <div class="number-wrapper">
          <h2 class="stat-number" data-target="15">0</h2>
          <span class="stat-suffix">años</span>
        </div>
        <p class="stat-text">En el mercado</p>
      </div>

      <div class="stat-item separator">
        <div class="number-wrapper">
          <h2 class="stat-number" data-target="3600">0</h2>
          <span class="stat-suffix">+</span>
        </div>
        <p class="stat-text">Equipos reparados</p>
      </div>

      <div class="stat-item">
        <div class="number-wrapper">
          <h2 class="stat-number" data-target="2500">0</h2>
          <span class="stat-suffix">+</span>
        </div>
        <p class="stat-text">Clientes satisfechos</p>
      </div>

    </div>
  </div>
</section>

<script>
  const observerOptions = { threshold: 0.5 };
  const statsObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const target = entry.target;
        const targetValue = parseInt(target.getAttribute('data-target'));
        let current = 0;
        const increment = targetValue / 100;
        const updateCount = () => {
          if (current < targetValue) {
            current += increment;
            target.innerText = Math.ceil(current);
            setTimeout(updateCount, 15);
          } else {
            target.innerText = targetValue;
          }
        };
        updateCount();
        statsObserver.unobserve(target);
      }
    });
  }, observerOptions);
  document.querySelectorAll('.stat-number').forEach(stat => statsObserver.observe(stat));
</script>

<style>
  .stats-section {
    background-color: #000;
    padding: 100px 0;
    color: #ffffff;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    max-width: 1100px;
    margin: 0 auto;
  }

  .stat-item {
    text-align: center;
    padding: 40px 20px;
  }

  .number-wrapper {
    display: flex;
    align-items: baseline;
    justify-content: center;
    margin-bottom: 10px;
  }

  /* NÚMERO: Blanco sólido, sin degradados raros */
  .stat-number {
    font-size: clamp(3.5rem, 8vw, 6rem);
    font-weight: 800;
    letter-spacing: -3px;
    line-height: 1;
    color: #ffffff;
    margin: 0;
  }

  /* SUFIJO: Más claro y con espacio corregido */
  .stat-suffix {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8); /* Mucho más brillante que antes */
    margin-left: 18px; /* El espacio que querías */
  }

  /* TEXTO INFERIOR: Legible y limpio */
  .stat-text {
    font-size: 1.1rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    letter-spacing: 0.5px;
  }

  /* Separadores sutiles pero visibles */
  .separator {
    border-left: 1px solid rgba(255, 255, 255, 0.15);
    border-right: 1px solid rgba(255, 255, 255, 0.15);
  }

  @media (max-width: 768px) {
    .stats-grid { grid-template-columns: 1fr; }
    .separator {
      border-left: none; border-right: none;
      border-top: 1px solid rgba(255, 255, 255, 0.15);
      border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    }
    .stat-number { font-size: 5rem; }
  }
</style>