      <!-- Batería MacBook -->
      <div class="pipod-battery-card">
        <div class="pipod-battery-icon"><i class="bi bi-lightning-charge-fill"></i></div>
        <h3 class="pipod-battery-title">Cambio de Batería MacBook</h3>
        
        <div class="pipod-spec-row">
          <span class="pipod-spec-label">PRECIO:</span>
