---
import Layout from '../layouts/Layout.astro';
import '../../assets/scss/astro-ecommerce.scss';
import PipodNavbar from '../components/pipodNavbar';
import Footer from '../components/pipodFooter';
import FloatingContact from '../layouts/floatingContact';
import CardProduct from '../components/products/cardProduct';
import ServiceBentoDark from '../components/ServiceCard';
import IncentiveCols from '../components/incentives/incentiveCols';
import ReviewWall from '../components/promo/reviewWall.jsx';
import BlogSection from '../components/reviews/blogSection';
import Stats from '../components/stats/Stats.astro';
import { getProductos } from '../lib/contentful';

const productos = await getProductos();
const iphones = productos.filter(p => p.nombre.toLowerCase().includes('iphone'));
const macbooks = productos.filter(p => p.nombre.toLowerCase().includes('macbook'));
---

<Layout title="Pipod - Servicio Técnico Apple Especializado">
  <main style="padding-bottom: 80px;">
    <PipodNavbar client:load />
    
    <!-- Hero Carousel Section -->
    <section class="position-relative overflow-hidden">
      <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="bg-gradient-primary text-white py-20">
              <div class="container text-center">
                <h1 class="display-4 font-weight-bold mb-4">Servicio Técnico Especializado Apple en Bogotá</h1>
                <p class="lead mb-6">Diagnóstico preciso y repuestos de calidad</p>
                <a href="/contacto" class="btn btn-white btn-lg px-6 py-3">AGENDA TU CITA</a>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="bg-gradient-success text-white py-20">
              <div class="container text-center">
                <h1 class="display-4 font-weight-bold mb-4">¡50% de Descuento en Mantenimiento MacBook!</h1>
                <p class="lead mb-6">Usa código Pipod20Web</p>
                <a href="/contacto" class="btn btn-white btn-lg px-6 py-3">Agenda Ahora</a>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <div class="bg-gradient-info text-white py-20">
              <div class="container text-center">
                <h1 class="display-4 font-weight-bold mb-4">Plan Retoma</h1>
                <p class="lead mb-6">Cambia tu viejo equipo por uno nuevo</p>
                <a href="/productos?categoria=plan-retoma" class="btn btn-white btn-lg px-6 py-3">Saber Más</a>
              </div>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    </section>

    <!-- Core Services (3 Pillars) -->
<section class="py-24" style="background-color: #000000;"> <div class="container">
    <div class="row g-4">
      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/tech/internal-iphone.png" /* Recuerda usar tus PNGs */
          icon_name="bi-tools" /* Icono clásico de herramientas */
          title="Reparación de Equipos"
          description="Diagnóstico rápido y garantía en todas nuestras reparaciones"
          buttonText="AGENDA"
          link="/servicio-tecnico"
          client:load
        />
      </div>

      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/tech/iphone-swap.png"
          icon_name="bi-arrow-repeat" /* Icono clásico de repetir/ciclo */
          title="Plan Retoma"
          description="Cambia lo viejo por lo nuevo con nuestro plan de intercambio"
          buttonText="Saber Más"
          link="/productos?categoria=plan-retoma"
          client:load
        />
      </div>

      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/tech/magsafe-accessories.png"
          icon_name="bi-bag-check" /* Icono clásico de bolsa de compra */
          title="Accesorios"
          description="Accesorios originales y compatibles para todos tus dispositivos"
          buttonText="IR A TIENDA"
          link="/productos?categoria=accesorios"
          client:load
        />
      </div>
    </div>
  </div>
</section>

    <!-- Featured Products (iPhones) -->
    <section class="py-24" style="background-color: #F8F9FA;">
      <div class="container">
        <div class="mb-12">
          <h2 class="display-5 fw-bold text-black">iPhone. <span class="text-muted">Elige tu nivel.</span></h2>
        </div>

        <div class="row g-4">
          {iphones.map(iphone => (
            <div class="col-md-6 col-lg-3">
              <CardProduct 
                {...iphone} 
                client:load 
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Payment Methods Banner -->
    <section class="payment-section">
      <div class="container text-center">
        <span class="trust-badge">Tecnología de pago segura</span>
        
        <div class="payment-wrapper">
          <div class="payment-grid">
            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/bold-logos/bold-dark.svg" alt="Bold" class="logo-bold">
            </div>

            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/pse.svg" alt="PSE" class="logo-img pse">
            </div>

            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/visa.svg" alt="Visa" class="logo-img">
            </div>
            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/mastercard.svg" alt="Mastercard" class="logo-img">
            </div>
            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/amex.svg" alt="Amex" class="logo-img">
            </div>

            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/nequi.svg" alt="Nequi" class="logo-img">
            </div>
            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/bancolombia.svg" alt="Bancolombia" class="logo-img">
            </div>
          </div>
        </div>
      </div>
    </section>

    <style>
      .payment-section {
        background-color: #000;
        padding: 100px 0;
        overflow: hidden;
      }

      .trust-badge {
        color: #fff;
        font-size: 0.8rem;
        letter-spacing: 6px;
        text-transform: uppercase;
        opacity: 0.5;
        display: block;
        margin-bottom: 60px;
      }

      .payment-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      .payment-grid {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 4.5rem;
      }

      .logo-img {
        height: 65px;
        width: auto;
        object-fit: contain;
        transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
      }

      .logo-bold {
        height: 45px;
        width: auto;
        transition: all 0.4s ease;
      }

      .logo-img.pse {
        height: 90px;
      }

      .payment-item:hover .logo-img, 
      .payment-item:hover .logo-bold {
        transform: scale(1.2) translateY(-10px);
        filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.15));
      }

      @media (max-width: 768px) {
        .payment-grid { gap: 3rem; }
        .logo-img { height: 45px; }
        .logo-img.pse { height: 65px; }
        .logo-bold { height: 35px; }
      }
    </style>

    <!-- Featured Products (MacBooks) -->
    <section class="py-12">
      <div class="container">
        <h2 class="text-center mb-8 display-6">Laptops Potentes (MacBooks)</h2>
        <div class="row">
          {macbooks.map(producto => (
            <div class="col-md-6 col-lg-3 mb-4">
              <CardProduct 
                thumb_src={producto.thumb_src}
                thumb_alt={producto.thumb_alt}
                color={producto.color}
                colors={producto.colors}
                title={producto.title}
                description={producto.description}
                price={producto.price}
                position="center"
                client:load
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Social Proof (Testimonials) -->
    <ReviewWall
      pageHeaderBgImg="https://images.unsplash.com/photo-1531297484001-80022131f5a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
      pageHeaderMinVh="40vh"
    />

    <!-- Why Choose Us (Differentiators) -->
    <IncentiveCols />

    <!-- Stats Section -->
    <Stats />

    <!-- Blog/News Section -->
    <BlogSection client:load />

    <!-- Sticky CTA (Mobile) -->
    <div class="fixed-bottom d-md-none" style="z-index: 1030; padding: 20px;">
      <a href="https://wa.me/573124813094" 
         style="
          display: flex;
          align-items: center;
          justify-content: center;
          background-color: #FFFFFF; 
          color: #000000;
          text-decoration: none;
          padding: 16px;
          border-radius: 12px;
          font-weight: 800;
          font-size: 14px;
          letter-spacing: 1px;
          box-shadow: 0 10px 30px rgba(0,0,0,0.3);
          text-transform: uppercase;
         ">
         <i class="bi bi-whatsapp" style="margin-right: 10px; font-size: 18px; color: #25D366;"></i>
         Agendar Servicio Técnico
      </a>
    </div>

    <FloatingContact client:load />
    <Footer client:load />
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carouselEl = document.getElementById('heroCarousel');
    if (carouselEl) {
      let currentIndex = 0;
      const items = carouselEl.querySelectorAll('.carousel-item');
      
      setInterval(() => {
        items[currentIndex].classList.remove('active');
        currentIndex = (currentIndex + 1) % items.length;
        items[currentIndex].classList.add('active');
      }, 5000);
    }
  });
</script>
