---
import Layout from '../layouts/Layout.astro';
import '../../assets/scss/astro-ecommerce.scss';
import PipodNavbar from '../components/pipodNavbar';
import Footer from '../components/pipodFooter';
import FloatingContact from '../layouts/floatingContact';
import CardProduct from '../components/products/cardProduct';
import ServiceBentoDark from '../components/serviceCard';
import IncentiveCols from '../components/incentives/incentiveCols';
import ReviewWall from '../components/promo/reviewWall.jsx';
import BlogSection from '../components/reviews/blogSection';
import Stats from '../components/stats/Stats.astro';
import BlogSection from '../components/reviews/blogSection.jsx';
import { getProductos } from '../lib/contentful';

const productos = await getProductos();
const iphones = productos.filter(p => p.nombre.toLowerCase().includes('iphone'));
const macbooks = productos.filter(p => p.nombre.toLowerCase().includes('macbook'));
---

<Layout title="Pipod - Servicio Técnico Apple Especializado">
  <main style="padding-bottom: 80px;">
    <PipodNavbar client:load />
    
    <!-- Hero Carousel Section -->
    <section id="bento-hero-section" class="py-4" style="background-color: #FFFFFF;">
  <div class="container">
<div class="container">
    <div class="row g-3">
      
      <div class="col-lg-4 d-flex flex-column gap-3">
        <div class="p-4 d-flex flex-column justify-content-between shadow-sm" 
             style="background: linear-gradient(135deg, #F5F7F9 0%, #E3E9ED 100%); border-radius: 24px; min-height: 220px; background-image: url('/images/appleblack.jpg'); background-size: cover; background-position: center;">
          <div>
            <span style="font-family: 'PT Mono'; font-size: 0.7rem; letter-spacing: 2px; color: #6E6E6E;">DIAGNÓSTICO EXPERTO</span>
            <h3 style="font-family: 'Inter'; font-weight: 700; margin-top: 8px; color: #FFF; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">SERVICIO TÉCNICO</h3>
            <p style="font-family: 'Noto Sans'; font-size: 0.9rem; color: #FFF; text-shadow: 0 1px 2px rgba(0,0,0,0.3);">Reparación profesional con garantía.</p>
          </div>
          <a href="#" style="font-family: 'Inter'; font-weight: 700; font-size: 0.8rem; text-decoration: none; color: #000;">AGENDAR →</a>
        </div>

        <div class="p-4 d-flex flex-column justify-content-between shadow-sm" 
             style="background: #1B1B1B; border-radius: 24px; min-height: 220px; color: #FFF; background-image: url('/images/accesorios phone.jpg'); background-size: cover; background-position: center 30%;">
          <div>
            <span style="font-family: 'PT Mono'; font-size: 0.7rem; letter-spacing: 2px; color: #000000;">ORIGINAL ONLY</span>
            <h3 style="font-family: 'Inter'; font-weight: 700; margin-top: 8px; color: #000000; text-shadow: 0 2px 4px rgba(0,0,0,0.3);">ACCESORIOS</h3>
            <p style="font-family: 'Noto Sans'; font-size: 0.9rem; color: #000000; text-shadow: 0 1px 2px rgba(0,0,0,0.3);">Lo mejor para tu ecosistema Apple.</p>
          </div>
          <a href="#" style="font-family: 'Inter'; font-weight: 700; font-size: 0.8rem; text-decoration: none; color: #FFF;">IR A TIENDA →</a>
        </div>
      </div>

      <div class="col-lg-8">
        <div id="heroBentoCarousel" class="carousel slide h-100 shadow-sm" data-bs-ride="carousel" style="border-radius: 24px; overflow: hidden;">
          <div class="carousel-inner h-100">
            
            <div class="carousel-item active h-100" style="background-image: url('/images/appleblack.jpg'); background-size: cover; background-position: center; min-height: 460px;">
              <div class="d-flex align-items-center h-100 p-5" style="background: rgba(0,0,0,0.3);">
                <div class="w-100 text-start">
                  <span style="font-family: 'PT Mono'; font-size: 0.75rem; letter-spacing: 3px; color: #FFF;">EXPERTOS APPLE</span>
                  <h1 style="font-family: 'Inter'; font-size: 2.8rem; font-weight: 700; margin-top: 10px; line-height: 1.1; color: #FFF;">
                    SERVICIO TÉCNICO <br> ESPECIALIZADO
                  </h1>
                  <p class="mt-3" style="font-family: 'Noto Sans'; font-size: 1.1rem; color: #FFF;">Diagnóstico preciso y repuestos originales en Bogotá.</p>
                  <a href="#" class="btn btn-light mt-4 px-4 py-2" style="border-radius: 50px; font-family: 'Inter'; font-weight: 600;">Agendar Cita →</a>
                </div>
              </div>
            </div>

           
            <div class="carousel-item h-100" style="background-image: url('/images/promo phone.jpg'); background-size: cover; background-position: center; min-height: 460px;">
              <div class="d-flex align-items-center h-100 p-5" style="background: rgba(0,0,0,0.3);">
                <div class="w-100 text-start">
                  <span style="font-family: 'PT Mono'; font-size: 0.75rem; letter-spacing: 3px; color: #FFF;">PROMO MÓVIL</span>
                  <h1 style="font-family: 'Inter'; font-size: 2.8rem; font-weight: 700; margin-top: 10px; line-height: 1.1; color: #FFF;">
                    REPARACIÓN <br> EXPRESS
                  </h1>
                  <p class="mt-3" style="font-family: 'Noto Sans'; font-size: 1.1rem; color: #FFF;">Mismo día para pantallas y baterías.</p>
                  <a href="#" class="btn btn-light mt-4 px-4 py-2" style="border-radius: 50px; font-family: 'Inter'; font-weight: 600;">Solicitar →</a>
                </div>
              </div>
            </div>

            <div class="carousel-item h-100" style="background-image: url('/images/nueva2.jpg'); background-size: cover; background-position: center; min-height: 460px;">
              <div class="d-flex align-items-center h-100 p-5" style="background: rgba(0,0,0,0.3);">
                <div class="w-100 text-start">
                  <span style="font-family: 'PT Mono'; font-size: 0.75rem; letter-spacing: 3px; color: #FFF;">PROMO ESPECIAL</span>
                  <h1 style="font-family: 'Inter'; font-size: 2.8rem; font-weight: 700; margin-top: 10px; line-height: 1.1; color: #FFF;">
                    OFERTAS <br> EXCLUSIVAS
                  </h1>
                  <p class="mt-3" style="font-family: 'Noto Sans'; font-size: 1.1rem; color: #FFF;">Descubre nuestras mejores promociones.</p>
                  <a href="#" class="btn btn-light mt-4 px-4 py-2" style="border-radius: 50px; font-family: 'Inter'; font-weight: 600;">Ver Más →</a>
                </div>
              </div>
            </div>

          </div>
          
          <div class="carousel-indicators" style="margin-bottom: 2rem; justify-content: flex-start; padding-left: 3rem;">
            <button type="button" data-bs-target="#heroBentoCarousel" data-bs-slide-to="0" class="active" style="width: 10px; height: 10px; border-radius: 50%; background-color: #000;"></button>
            <button type="button" data-bs-target="#heroBentoCarousel" data-bs-slide-to="1" style="width: 10px; height: 10px; border-radius: 50%; background-color: #6E6E6E;"></button>
            <button type="button" data-bs-target="#heroBentoCarousel" data-bs-slide-to="2" style="width: 10px; height: 10px; border-radius: 50%; background-color: #6E6E6E;"></button>
            <button type="button" data-bs-target="#heroBentoCarousel" data-bs-slide-to="3" style="width: 10px; height: 10px; border-radius: 50%; background-color: #6E6E6E;"></button>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>


<!-- Stats Section -->
    <Stats />


    <!-- Core Services (3 Pillars) -->
<section class="py-5 service-cards-section" style="background-color: #F5F5F5; border-top: 1px solid #E0E0E0;"> 
  <div class="container">
    <div class="mb-4 text-start">
      <h2 style="font-family: 'Inter', sans-serif; font-size: 2rem; font-weight: 700; color: #000000; margin: 0; letter-spacing: -0.02em; text-transform: uppercase;">
        Servicios
      </h2>
    </div>

    <div class="row g-4">
      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/imagenservicios.jpg"
          icon_name="bi-tools"
          title="Reparación de Equipos"
          description="Diagnóstico rápido y garantía en todas nuestras reparaciones"
          buttonText="AGENDA"
          link="/servicio-tecnico"
          client:load
        />
      </div>

      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/plan retoma 1.jpg"
          icon_name="bi-arrow-repeat"
          title="Plan Retoma"
          description="Intercambia tu equipo antiguo por uno nuevo con el mejor valor"
          buttonText="SABER MÁS"
          link="/productos?categoria=plan-retoma"
          client:load
        />
      </div>

      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/accesorios 2.jpg"
          icon_name="bi-bag-check"
          title="Accesorios"
          description="Accesorios originales y compatibles para todos tus dispositivos"
          buttonText="IR A TIENDA"
          link="/productos?categoria=accesorios"
          client:load
        />
      </div>
    </div>
  </div>
</section>

 <!-- Why Choose Us (Differentiators) -->
    <IncentiveCols />


    <!-- Featured Products (iPhones) -->
    <section class="py-24" style="background-color: #F8F9FA;">
      <div class="container">
        <div class="mb-12">
          <h2 style="font-family: 'Inter', sans-serif; font-size: 2rem; font-weight: 700; color: #000000; text-align: left; margin: 0; letter-spacing: -0.02em; text-transform: uppercase;">iPhone</h2>
        </div>

        <div class="row g-4">
          {iphones.map(iphone => (
            <div class="col-md-6 col-lg-3">
              <CardProduct 
                {...iphone} 
                client:load 
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Payment Methods Banner -->
    <section class="payment-section">
      <div class="container text-center">
              
        <div class="payment-wrapper">
          <div class="payment-grid">
            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/bold-logos/bold-dark.svg" alt="Bold" class="logo-bold">
            </div>

            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/pse.svg" alt="PSE" class="logo-img pse">
            </div>

            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/visa.svg" alt="Visa" class="logo-img">
            </div>
            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/mastercard.svg" alt="Mastercard" class="logo-img">
            </div>
            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/amex.svg" alt="Amex" class="logo-img">
            </div>

            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/nequi.svg" alt="Nequi" class="logo-img">
            </div>
            <div class="payment-item">
              <img src="https://checkout.bold.co/library/assets/payment-methods/dark/bancolombia.svg" alt="Bancolombia" class="logo-img">
            </div>
          </div>
        </div>
      </div>
    </section>

    <style>
      .payment-section {
        background-color: #000;
        padding: 100px 0;
        overflow: hidden;
      }

      .trust-badge {
        color: #fff;
        font-size: 0.8rem;
        letter-spacing: 6px;
        text-transform: uppercase;
        opacity: 0.5;
        display: block;
        margin-bottom: 60px;
      }

      .payment-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      .payment-grid {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 4.5rem;
      }

      .logo-img {
        height: 65px;
        width: auto;
        object-fit: contain;
        transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
      }

      .logo-bold {
        height: 45px;
        width: auto;
        transition: all 0.4s ease;
      }

      .logo-img.pse {
        height: 90px;
      }

      .payment-item:hover .logo-img, 
      .payment-item:hover .logo-bold {
        transform: scale(1.2) translateY(-10px);
        filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.15));
      }

      @media (max-width: 768px) {
        .payment-grid { gap: 3rem; }
        .logo-img { height: 45px; }
        .logo-img.pse { height: 65px; }
        .logo-bold { height: 35px; }
      }
    </style>

    <!-- Featured Products (MacBooks) -->
    <section class="py-12">
      <div class="container">
        <h2 style="font-family: 'Inter', sans-serif; font-size: 2rem; font-weight: 700; color: #000000; text-align: left; margin: 0; letter-spacing: -0.02em; text-transform: uppercase;">MacBooks</h2>
        <div class="row">
          {macbooks.map(producto => (
            <div class="col-md-6 col-lg-3 mb-4">
              <CardProduct 
                thumb_src={producto.thumb_src}
                thumb_alt={producto.thumb_alt}
                color={producto.color}
                colors={producto.colors}
                title={producto.title}
                description={producto.description}
                price={producto.price}
                position="center"
                client:load
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Social Proof (Testimonials) -->
    <ReviewWall
      pageHeaderBgImg="https://images.unsplash.com/photo-1531297484001-80022131f5a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
      pageHeaderMinVh="40vh"
    />

   
    
    <!-- Blog/News Section -->
    <BlogSection client:load />

    <!-- Sticky CTA (Mobile) -->
    <div class="fixed-bottom d-md-none" style="z-index: 1030; padding: 20px;">
      <a href="https://wa.me/573124813094" 
         style="
          display: flex;
          align-items: center;
          justify-content: center;
          background-color: #FFFFFF; 
          color: #000000;
          text-decoration: none;
          padding: 16px;
          border-radius: 12px;
          font-weight: 800;
          font-size: 14px;
          letter-spacing: 1px;
          box-shadow: 0 10px 30px rgba(0,0,0,0.3);
          text-transform: uppercase;
         ">
         <i class="bi bi-whatsapp" style="margin-right: 10px; font-size: 18px; color: #25D366;"></i>
         Agendar Servicio Técnico
      </a>
    </div>

    <FloatingContact client:load />
    <Footer client:load />
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carouselEl = document.getElementById('heroCarousel');
    if (carouselEl) {
      let currentIndex = 0;
      const items = carouselEl.querySelectorAll('.carousel-item');
      
      setInterval(() => {
        items[currentIndex].classList.remove('active');
        currentIndex = (currentIndex + 1) % items.length;
        items[currentIndex].classList.add('active');
      }, 5000);
    }
  });
</script>
