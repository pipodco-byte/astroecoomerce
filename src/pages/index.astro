---
import Layout from '../layouts/Layout.astro';
import '../../assets/scss/astro-ecommerce.scss';
import PipodNavbar from '../components/pipodNavbar';
import Footer from '../components/pipodFooter';
import FloatingContact from '../layouts/floatingContact';
import CardProduct from '../components/products/cardProduct';
import ServiceBentoDark from '../components/serviceCard';
import IncentiveCols from '../components/incentives/incentiveCols';
import IncentiveShort from '../components/incentives/incentiveShort';
import IncentiveShortB from '../components/incentives/incentivceShortB';
import IncentiveShortBlackB from '../components/incentives/incentiveShortBlackB';
import IncentiveOJONOSE from '../components/incentives/incentiveOJONOSE';
import IncentiveOJO from '../components/incentives/ojo.tampoco';
import IncentivePenultimo from '../components/incentives/penultimo';
import IncentiveTransparente from '../components/incentives/trasparente';
import IncentiveUltimo from '../components/incentives/ultimo';
import ReviewWall from '../components/promo/pipodGoogleReviews.jsx';
import BlogSection from '../components/reviews/blogSection';
import Stats from '../components/stats/pipodStats.astro';
import HeroBentoCarousel from '../components/hero/heroBentoCarousel.astro';
import { getProductos } from '../lib/contentful';

const productos = await getProductos();
const iphones = productos.filter(p => p.nombre.toLowerCase().includes('iphone'));
const macbooks = productos.filter(p => p.nombre.toLowerCase().includes('macbook'));
---

<Layout title="Pipod - Servicio Técnico Apple Especializado">
  <main>
    <PipodNavbar client:load />
    
    <!-- Hero Carousel Section -->
    <HeroBentoCarousel />


<!-- Stats Section -->
    <Stats />


    <!-- Core Services (3 Pillars) -->
<section class="py-5 service-cards-section" style="background-color: #F5F5F5; border-top: 1px solid #E0E0E0;"> 
  <div class="container">
    <div class="mb-4 text-start">
      <h2 style="font-family: 'Inter', sans-serif; font-size: 2rem; font-weight: 700; color: #000000; margin: 0; letter-spacing: -0.02em; text-transform: uppercase;">
        Servicios
      </h2>
    </div>

    <div class="row g-4">
      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/imagenservicios.jpg"
          icon_name="bi-tools"
          title="Reparación de Equipos"
          description="Diagnóstico rápido y garantía en todas nuestras reparaciones"
          buttonText="AGENDA"
          link="/servicio-tecnico"
          client:load
        />
      </div>

      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/plan retoma 1.jpg"
          icon_name="bi-arrow-repeat"
          title="Plan Retoma"
          description="Intercambia tu equipo antiguo por uno nuevo con el mejor valor"
          buttonText="SABER MÁS"
          link="/productos?categoria=plan-retoma"
          client:load
        />
      </div>

      <div class="col-md-4">
        <ServiceBentoDark 
          image_src="/images/accesorios 2.jpg"
          icon_name="bi-bag-check"
          title="Accesorios"
          description="Accesorios originales y compatibles para todos tus dispositivos"
          buttonText="IR A TIENDA"
          link="/productos?categoria=accesorios"
          client:load
        />
      </div>
    </div>
  </div>
</section>

 <!-- Why Choose Us (Differentiators) -->
    <IncentiveCols />
    <IncentiveShort client:load />
    <IncentiveShortB client:load />
    <IncentiveShortBlackB client:load />
    <IncentivePenultimo client:load />
    <IncentiveUltimo client:load />


    <!-- Featured Products (iPhones) -->

<section class="products-section">
  <div class="container">
    <div class="header-container">
      <h2 class="section-title">iPhone</h2>
    </div>

    <div class="row g-4">
      {iphones.map(iphone => (
        <div class="col-md-6 col-lg-3 d-flex align-items-stretch">
          <div class="card-wrapper">
             <CardProduct 
                {...iphone} 
                client:load 
              />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style is:global>
  /* 1. SECCIÓN: Reducimos el exceso de aire superior (py-24 era demasiado) */
  .products-section {
    background-color: #F8F9FA;
    padding: 80px 0; /* Unificado: 80px arriba y abajo */
  }

  .header-container {
    margin-bottom: 40px; /* Separación constante con las cards */
  }

  .section-title {
    font-family: 'Inter', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #000000;
    margin: 0;
    letter-spacing: -0.02em;
    text-transform: uppercase;
  }

  /* 2. EL TRUCO PARA EQUILIBRAR LA CARD: 
     Forzamos el espaciado interno mediante el wrapper si la card está descompensada */
  
  .card-wrapper {
    width: 100%;
    display: flex;
  }

  /* Seleccionamos la card generada dentro del componente */
  .card-wrapper > div, 
  .card-wrapper article {
    width: 100%;
    /* Ajustamos los paddings internos para quitar peso de arriba y darlo abajo */
    padding-top: 20px !important;    /* Menos espacio arriba */
    padding-bottom: 30px !important; /* Más espacio abajo para el footer */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: #ffffff;
    border-radius: 28px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.03);
    transition: transform 0.3s ease;
  }

  .card-wrapper:hover > div {
    transform: translateY(-5px);
  }

  /* 3. IMAGEN: Aseguramos que la imagen no tenga un margen superior propio */
  .card-wrapper img {
    margin-top: 10px !important;
    margin-bottom: 20px !important;
    object-fit: contain;
  }

  /* Responsivo para móviles */
  @media (max-width: 768px) {
    .products-section {
      padding: 50px 0;
    }
    .section-title {
      font-size: 1.5rem;
    }
  }
</style>

    <!-- Payment Methods Banner -->
 <section class="payment-section">
  <div class="container-fluid">
    <div class="payment-wrapper">
      <div class="payment-grid">
        
        <div class="payment-item">
          <img src="https://checkout.bold.co/library/assets/bold-logos/bold-dark.svg" alt="Bold" class="logo-bold">
        </div>

        <div class="payment-item">
          <img src="https://checkout.bold.co/library/assets/payment-methods/dark/pse.svg" alt="PSE" class="logo-img pse">
        </div>

        <div class="payment-item">
          <img src="https://checkout.bold.co/library/assets/payment-methods/dark/visa.svg" alt="Visa" class="logo-img">
        </div>

        <div class="payment-item">
          <img src="https://checkout.bold.co/library/assets/payment-methods/dark/mastercard.svg" alt="Mastercard" class="logo-img">
        </div>

        <div class="payment-item">
          <img src="https://checkout.bold.co/library/assets/payment-methods/dark/amex.svg" alt="Amex" class="logo-img">
        </div>

        <div class="payment-item">
          <img src="https://checkout.bold.co/library/assets/payment-methods/dark/nequi.svg" alt="Nequi" class="logo-img">
        </div>

        <div class="payment-item">
          <img src="https://checkout.bold.co/library/assets/payment-methods/dark/bancolombia.svg" alt="Bancolombia" class="logo-img">
        </div>

      </div>
    </div>
  </div>
</section>

<style>
  .payment-section {
    background-color: #000;
    /* MEDIDAS TÉCNICAS REQUERIDAS */
    height: 119px; 
    width: 100%;
    display: flex;
    align-items: center;
    padding: 0;
    overflow: hidden;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .payment-wrapper {
    /* ANCHO MÁXIMO REQUERIDO */
    max-width: 1440px;
    width: 100%;
    margin: 0 auto;
    padding: 0 80px; /* Un poco más de aire en los bordes para mayor elegancia */
  }

  .payment-grid {
    display: flex;
    /* DISTRIBUCIÓN MINIMALISTA QUE TE GUSTÓ */
    justify-content: space-between; 
    align-items: center;
    gap: 20px;
    flex-wrap: nowrap;
  }

  .logo-img {
    height: 38px; /* Tamaño optimizado para la distribución space-between */
    width: auto;
    object-fit: contain;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .logo-bold {
    height: 28px;
    width: auto;
    transition: all 0.4s ease;
  }

  .logo-img.pse {
    height: 52px; /* Proporción PSE ajustada */
  }

  /* Efecto Hover sutil conservando el color */
  .payment-item:hover .logo-img, 
  .payment-item:hover .logo-bold {
    transform: translateY(-5px);
    filter: drop-shadow(0 5px 15px rgba(255, 255, 255, 0.1));
  }

  @media (max-width: 991px) {
    .payment-section {
      height: auto;
      padding: 40px 0;
    }
    .payment-grid {
      flex-wrap: wrap;
      justify-content: center;
      gap: 30px;
    }
  }
</style>

    <!-- Featured Products (MacBooks) -->
    <section class="macbooks-section">
  <div class="container">
    <div class="header-container">
      <h2 class="section-title">MacBooks</h2>
    </div>

    <div class="row g-4">
      {macbooks.map(producto => (
        <div class="col-md-6 col-lg-3 d-flex align-items-stretch">
          <div class="card-wrapper">
            <CardProduct 
              thumb_src={producto.thumb_src}
              thumb_alt={producto.thumb_alt}
              color={producto.color}
              colors={producto.colors}
              title={producto.title}
              description={producto.description}
              price={producto.price}
              position="center"
              client:load
            />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style is:global>
  /* Unificamos el estilo de la sección para evitar desequilibrios */
  .macbooks-section {
    background-color: #F8F9FA;
    padding: 80px 0; /* Padding equilibrado */
  }

  .header-container {
    margin-bottom: 40px; /* Espacio constante entre título y cards */
  }

  .section-title {
    font-family: 'Inter', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #000000;
    margin: 0;
    letter-spacing: -0.02em;
    text-transform: uppercase;
  }

  /* Ajuste de la Card para MacBooks */
  .card-wrapper {
    width: 100%;
    display: flex;
  }

  /* Corregimos el espacio interno (Padding) para que no pese arriba */
  .card-wrapper > div, 
  .card-wrapper article {
    width: 100%;
    /* Balanceamos: Menos arriba (20px) para que la Mac suba, más abajo (32px) para el precio */
    padding: 20px 24px 32px 24px !important; 
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: #ffffff;
    border-radius: 28px;
    box-shadow: 0 8px 25px rgba(0,0,0,0.02);
    transition: all 0.3s ease;
  }

  .card-wrapper:hover > div {
    transform: translateY(-5px);
    box-shadow: 0 12px 35px rgba(0,0,0,0.06);
  }

  /* Aseguramos que la imagen de la MacBook esté centrada y tenga aire */
  .card-wrapper img {
    margin-top: 15px !important;
    margin-bottom: 25px !important;
    max-height: 180px; /* Altura controlada para laptops */
    object-fit: contain;
  }

  @media (max-width: 991px) {
    .macbooks-section { padding: 60px 0; }
    .section-title { font-size: 1.7rem; }
  }
</style>


    <!-- Social Proof (Testimonials) -->
    <ReviewWall
      pageHeaderBgImg="https://images.unsplash.com/photo-1531297484001-80022131f5a1?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
      pageHeaderMinVh="40vh"
    />

   
    
    <!-- Blog/News Section -->
    <BlogSection client:load />

    <!-- Sticky CTA (Mobile) -->
    <div class="fixed-bottom d-md-none" style="z-index: 1030; padding: 20px;">
      <a href="https://wa.me/573124813094" 
         style="
          display: flex;
          align-items: center;
          justify-content: center;
          background-color: #FFFFFF; 
          color: #000000;
          text-decoration: none;
          padding: 16px;
          border-radius: 12px;
          font-weight: 800;
          font-size: 14px;
          letter-spacing: 1px;
          box-shadow: 0 10px 30px rgba(0,0,0,0.3);
          text-transform: uppercase;
         ">
         <i class="bi bi-whatsapp" style="margin-right: 10px; font-size: 18px; color: #25D366;"></i>
         Agendar Servicio Técnico
      </a>
    </div>

    <FloatingContact client:load />
    <Footer client:load />
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carouselEl = document.getElementById('heroCarousel');
    if (carouselEl) {
      let currentIndex = 0;
      const items = carouselEl.querySelectorAll('.carousel-item');
      
      setInterval(() => {
        items[currentIndex].classList.remove('active');
        currentIndex = (currentIndex + 1) % items.length;
        items[currentIndex].classList.add('active');
      }, 5000);
    }
  });
</script>
